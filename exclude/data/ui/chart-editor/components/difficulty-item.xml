<?xml version="1.0" encoding="utf-8"?>
<hbox width="100%" horizontalAlign="right">
  <hbox id="plusBox" width="100%" horizontalAlign="right" >
    <button id="createButton" width="20" height="20" horizontalAlign="center" verticalAlign="center">
      <image resource="assets/images/chartEditor/plus-symbol.png" verticalAlign="center" horizontalAlign="center"/>
    </button>
  </hbox>
  <frame id="difficultyFrame" text="Difficulty" width="100%" hidden="true">
    <hbox width="100%">
      <vbox width="100%">
        <hbox width="100%">
          <label text="Difficulty" verticalAlign="center"/>
          <dropdown id="difficultyDropdown" value="" width="100" height="25" dropdownSize="10" dropdownWidth="100" searchable="true" verticalAlign="center"/>
          <spacer width="100%" verticalAlign="center"/>
          <label text="Algorithm" verticalAlign="center"/>
          <dropdown id="algorithmDropdown" value="" width="200" height="25" dropdownSize="10" dropdownWidth="200" searchable="true" verticalAlign="center" disabled="true"/>
        </hbox>
        <hbox id="algorithmBox" width="100%">
          <label text="Remove Every Nth Note" verticalAlign="center"/>
          <numberstepper id="nStepper" value ="2" step="1" min="1" max="5" verticalAlign="center"/>
        </hbox>
      </vbox>
      <button id="destroyButton" width="20" height="20" horizontalAlign="center" verticalAlign="center">
        <image resource="assets/images/chartEditor/minus-symbol.png" verticalAlign="center" horizontalAlign="center"/>
      </button>
    </hbox>
  </frame>
</hbox>
